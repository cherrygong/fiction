<h1>New Book</h1>


<%= form_for :book ,url: books_path do|f| %>


    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </p>

    <p>

        <label>Author name</label><br>
        <% 3.times do |index|%>
        <input name=book[authors_attributes][<%= index %>][name]>
      <% end %>
    </p>

    <p>
      <%= f.label :release_date %><br>
      <%= f.text_field :releast_data %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>


    <p>
      <%  %>
    </p>

    <p>
      <%= f.submit %>
    </p>


<% end %>
