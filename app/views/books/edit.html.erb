<h1>Editing Book</h1>

<%= form_for :book, url: book_path(@book), method: :patch do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>


    <p>
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', books_path %>