<h1>Listing All Books</h1>


<%= link_to 'NEW BOOK', new_book_path %>


<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Description</th>

    <th colspan="3"></th>


  </tr>

  <% @books.each do |book| %>
      <tr>

        <td><%= book.title %></td>

        <td>
          <% book.authors.each do |author| %>
              <a><%= link_to("#{author.name}", "/books/#{book.id}/authors/#{author.id}")%></a>
          <% end %>
        </td>

        <td><%= book.price %></td>
        <td><%= book.description %></td>

        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %> </td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete %></td>


      </tr>
  <% end %>


</table>